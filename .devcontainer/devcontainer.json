{
  "name": "security-learning-lab",
  "image": "mcr.microsoft.com/devcontainers/javascript-node:24",
  "features": {
    "ghcr.io/devcontainers-extra/features/bun:1": {},
    "ghcr.io/devcontainers/features/git:1": {},
    "ghcr.io/devcontainers/features/common-utils:2": {}
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "biomejs.biome",
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode",
        "eamodio.gitlens",
        "bradlc.vscode-tailwindcss"
      ]
    }
  },

  // ã‚³ãƒ³ãƒ†ãƒŠèµ·å‹•æ™‚ã®ã‚³ãƒãƒ³ãƒ‰
  "postCreateCommand": "bun install",

  // Next.js dev server ã®ãƒãƒ¼ãƒˆ
  "forwardPorts": [3000],

  // ğŸ”½ node_modules ã¨ bun cache ã‚’æ°¸ç¶šåŒ–ã™ã‚‹è¨­å®š
  "mounts": [
    "source=nextjs_node_modules,target=/workspaces/${localWorkspaceFolderBasename}/node_modules,type=volume",
